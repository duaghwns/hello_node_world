<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <title>Document</title>
    <style>
        .m30 {
            margin-left: 30px;
        }

        .inputbox {
            border: 1px solid #999;
            width: 180px;
        }

        input {
            border: none;
        }

        textarea {
            border: none;
        }
    </style>
</head>

<body>

    <div class="navbar m30">
        <h1 onclick="location.href='/'">Index</h1>
        <a href="/login">login</a>
        <a href="/register">register</a>
        <a href="#">#</a>
        <a href="#">#</a>
        <a href="#">#</a>
    </div>

    <hr>
    <div class="m30">
        <form action="/todo" method="post">
            <h2>post</h2>
            <p>
            <div class="inputbox">
                <input type="text" name="title" placeholder="제목"><br>
                <textarea name="content" placeholder="내용을 입력하세요" cols="22" rows="5"></textarea>
            </div>
            </p>
            <input type="hidden" name="date" id="v_date">
            <input type="submit" value="Save!">
        </form>
    </div>
    <hr>
    <div class="m30">
        <table>
            <tr style="text-align:center;">
                <th>글번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>날짜</th>
            </tr>
            <% for(let i=posts.length-1; i>= 0; i--) { %>
                <tr id="post<%=posts[i]._id%>">
                    <td>
                        <%= i+1 %>
                            (<%=posts[i]._id%>)
                    </td>
                    <td><a href="/detail/<%=posts[i]._id%>">
                            <%= posts[i].title %>
                        </a></td>
                    <td>
                        <%= posts[i].writer %>
                    </td>
                    <td>
                        <%= posts[i].date %>
                    </td>
                    <td>
                        <button class="del_todd danger" data-id="<%= posts[i]._id %>">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                              </svg>
                        </button>
                        
                    </td>
                </tr>
                <% } %>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script>
        const v_date = document.querySelector('#v_date');
        window.onload = () => {
            v_date.value = new Date().toISOString().substring(0, 10);
        }

        // 삭제버튼 클릭
        $('.del_todd').click(e => {
            let post_id = e.target.dataset.id;
            $.ajax({
                method: 'DELETE',
                url: '/delete',
                data: { _id: post_id }
            }).done(res => {
                $(`#post${post_id}`).fadeOut();
            }).fail(err => { console.log(err) });
        });
    </script>
</body>

</html>